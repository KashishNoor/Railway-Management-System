<Page
    x:Class="RAILWAY_SYSTEM.Views.ManageEmployeesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <ScrollViewer>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                <Image x:ConnectionId='3' x:Name="mgr" Source="/Assets/mgr.png" Height="250" Width="250" Margin="0 0 0 10"/>
                <TextBlock Text="               SELECT AN OPTION" FontWeight="Bold" Foreground="CornflowerBlue" Margin="0 0 0 20" />
                <Button x:ConnectionId='4' x:Name="Add_Button" Width="250" Height="35" FontWeight="Bold" Content="Add Employee" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 20"/>
                <Button x:ConnectionId='5' x:Name="Update_Button" Width="250" Height="35" FontWeight="Bold" Content="Update Employee" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 20"/>
                <Button x:ConnectionId='6' x:Name="Delete_Button" Width="250" Height="35" FontWeight="Bold" Content="Delete Employee" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 20"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

