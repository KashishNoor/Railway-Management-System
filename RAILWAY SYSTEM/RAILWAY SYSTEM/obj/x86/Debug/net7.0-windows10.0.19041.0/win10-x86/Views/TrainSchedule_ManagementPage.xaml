<Page
    x:Class="RAILWAY_SYSTEM.Views.TrainSchedule_ManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <ScrollViewer>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                <Image x:ConnectionId='3' x:Name="o" Source="/Assets/o.png" Height="250" Width="350" Margin="0 0 0 6"/>
                <TextBlock Text="SELECT AN OPTION" HorizontalAlignment="Center" FontWeight="Bold" Foreground="CornflowerBlue" Margin="0 0 0 20" />
                <Button x:ConnectionId='4' x:Name="Add2_Button" Width="250" Height="35" FontWeight="Bold" Content="Add Schedule" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 20"                    />
                <Button x:ConnectionId='5' x:Name="Update2_Button" Width="250" Height="35" FontWeight="Bold" Content="Update Schedule" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 20"                   />
                <Button x:ConnectionId='6' x:Name="Delete2_Button" Width="250" Height="35" FontWeight="Bold" Content="Delete Schedule" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 0 0 20"                    />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

