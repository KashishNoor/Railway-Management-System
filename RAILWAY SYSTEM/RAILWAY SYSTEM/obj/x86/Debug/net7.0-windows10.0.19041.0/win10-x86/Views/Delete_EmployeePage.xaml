<Page
    x:Class="RAILWAY_SYSTEM.Views.Delete_EmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
		<ScrollViewer>
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
				<Image x:ConnectionId='3' x:Name="hhh" Source="/Assets/hhh.png" Height="250" Width="250" Margin="0 0 0 10"/>
                <AutoSuggestBox x:ConnectionId='4'  Header="Enter ID :" PlaceholderText="Search"
                                                     
                   QueryIcon="Find"
                                                           
                                                               />
                <Button x:ConnectionId='5' x:Name="DEL_Button" Width="200" Height="35" FontWeight="Bold" Content="Delete" HorizontalAlignment="Center" Background="#505AC9" Foreground="#FFFFFF" Margin="0 10 10 10"                     />
			</StackPanel>
		</ScrollViewer>
    </Grid>
</Page>

