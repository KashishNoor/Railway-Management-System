<Page
    x:Class="RAILWAY_SYSTEM.Views.CheckProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <Image x:ConnectionId='3' x:Name="m" Source="/Assets/m.png" VerticalAlignment="Top" HorizontalAlignment="Center" Height="250" Width="350" Margin="0 0 0 20" Grid.Row="0" />
            <AutoSuggestBox x:ConnectionId='4'  Header="Enter ID :" PlaceholderText="Search Profile"
                                                
              QueryIcon="Find"
                                                      
                                                          />
            <Button x:ConnectionId='5' x:Name="Check_Button" Content="Check Profile" Width="180" Height="35" FontWeight="Bold" Background="#505AC9" Foreground="#FFFFFF" HorizontalAlignment="Center" Margin="0 50 0 10" Grid.Row="2" />
        </StackPanel>
    </Grid>
</Page>

